        <xacro:cylinder_inertial_matrix m="2.0" r="0.02" h="0.1" x="0.26" y="0.34" z="0.11"/>
    </link>

    <link name="jar3">
        <visual>
            <origin xyz="0.126 0.34 0.11" rpy="0 0 0"/>
            <geometry>
