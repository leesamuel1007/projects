    <link name="table">
        <visual>
            <origin xyz="0.2 0.34 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.6 0.2 0.11"/>
            </geometry>
            <material name="Black"/>
        </visual>
        <collision>
            <origin xyz="0.2 0.34 0" rpy="0 0 0"/>
            <geometry>
