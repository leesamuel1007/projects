        <xacro:Box_inertial_matrix m="10" l="0.6" w="0.2" h="0.11" x="0.2" y="0.34" z="0"/>
    </link>


    <joint name="cam_joint" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0"/>
